<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @patient.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @patient.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dob) %>:</strong></dt>
  <dd><%= @patient.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @patient.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @patient.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @patient.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confirm_call) %>:</strong></dt>
  <dd><%= @patient.confirm_call %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language) %>:</strong></dt>
  <dd><%= @patient.language %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_time) %>:</strong></dt>
  <dd><%= @patient.call_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_preference) %>:</strong></dt>
  <dd><%= @patient.call_preference %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ralative_name) %>:</strong></dt>
  <dd><%= @patient.ralative_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relation_with_relative) %>:</strong></dt>
  <dd><%= @patient.relation_with_relative %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relative_mobile) %>:</strong></dt>
  <dd><%= @patient.relative_mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disease) %>:</strong></dt>
  <dd><%= @patient.disease %></dd>
  <dt><strong><%= model_class.human_attribute_name(:health_status) %>:</strong></dt>
  <dd><%= @patient.health_status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              patients_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patient_path(@patient), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patient_path(@patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
