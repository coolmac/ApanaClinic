<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:dob) %></th>
      <th><%= model_class.human_attribute_name(:mobile) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:confirm_call) %></th>
      <th><%= model_class.human_attribute_name(:language) %></th>
      <th><%= model_class.human_attribute_name(:call_time) %></th>
      <th><%= model_class.human_attribute_name(:call_preference) %></th>
      <th><%= model_class.human_attribute_name(:ralative_name) %></th>
      <th><%= model_class.human_attribute_name(:relation_with_relative) %></th>
      <th><%= model_class.human_attribute_name(:relative_mobile) %></th>
      <th><%= model_class.human_attribute_name(:disease) %></th>
      <th><%= model_class.human_attribute_name(:health_status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.id, patient_path(patient) %></td>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.mobile %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.address %></td>
        <td><%= patient.confirm_call %></td>
        <td><%= patient.language %></td>
        <td><%= patient.call_time %></td>
        <td><%= patient.call_preference %></td>
        <td><%= patient.ralative_name %></td>
        <td><%= patient.relation_with_relative %></td>
        <td><%= patient.relative_mobile %></td>
        <td><%= patient.disease %></td>
        <td><%= patient.health_status %></td>
        <td><%=l patient.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_patient_path(patient), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_path(patient),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_path,
            :class => 'btn btn-primary' %>
