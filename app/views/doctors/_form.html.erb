<%= form_for @doctor, :html => { :class => "form-horizontal doctor" } do |f| %>

    <% if @doctor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @doctor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :mobile, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mobile, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:mobile]) %>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:address]) %>
  </div>
  <div class="control-group">
    <%= f.label :education, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :education, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:education]) %>
  </div>
  <div class="control-group">
    <%= f.label :specialization, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :specialization, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:specialization]) %>
  </div>
  <div class="control-group">
    <%= f.label :experience, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :experience, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:experience]) %>
  </div>
  <div class="control-group">
    <%= f.label :consultation_fee, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :consultation_fee, :class => 'form-control' %>
    </div>
    <%= error_span(@doctor[:consultation_fee]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            doctors_path, :class => 'btn btn-default' %>

<% end %>
